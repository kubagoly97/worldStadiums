<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit</h1>
        <div class="col-md-6 offset-md-3 mb-3">
            <form action="/stadiums/<%=id%>?_method=put" method='POST' novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="stadium[title]" value="<%=stadium.title%>"
                        required>
                    <div class="invalid-feedback">Please put a name</div>
                    <div class="valid-feedback">NICE</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="stadium[location]"
                        value="<%=stadium.location%>" required>
                    <div class="invalid-feedback">Location first!</div>
                    <div class="valid-feedback">NICE</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">League</label>
                    <input class="form-control" type="text" id="location" name="stadium[league]"
                        value="<%=stadium.league%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Stadium Ticket Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">PLN</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="stadium[price]" value="<%=stadium.price%>" required>
                        <div class="invalid-feedback">Please put a price</div>
                        <div class="valid-feedback">NICE</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="stadium[description]"
                        required><%=stadium.description%></textarea>
                    <div class="invalid-feedback">Please put a description</div>
                    <div class="valid-feedback">NICE</div>
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Upload Images</label>
                    <input type="file" class="form-control" id="formFileMultiple" name="image" multiple>
                </div>
                <div class="mb-3">
                    <% stadium.images.forEach(function(img,i){ %>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        <% }) %>
                </div>
                <button class="btn btn-info mb-3">Update Stadium</button>
            </form>
            <a href="/stadiums/<%=id%>" class="btn btn-warning">Stop editing</a>
        </div>
    </div>


    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.querySelectorAll('.validated-form')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>