<% layout('layouts/boilerplate') %>
    <div id="cluster-map"></div>
    <h1 class="mb-3 mt-3">Stadiums</h1>
    <div class="mb-3"> <a href="/stadiums/new" class="btn btn-warning">Add stadium</a>
    </div>
    <% for(let stadium of stadiums){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(stadium.images.length){%>
                        <img class="img-fluid" crossorigin="anonymous" src="<%=stadium.images[0].url%>" alt="">
                        <% }else{ %>
                            <img class="img-fluid" crossorigin="anonymous"
                                src="https://res.cloudinary.com/dctw1fiot/image/upload/v1688717284/WorldStadiums/bxy7finq4f2itdxvoqq3.jpg"
                                alt="">
                            <%}%>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=stadium.title%>
                        </h5>
                        <p class="card-text">
                            <%=stadium.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=stadium.location %>
                            </small>
                        </p>
                        <a href="/stadiums/<%=stadium.id%>" class="btn btn-primary">View <%=stadium.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script>
                const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
                const stadiums = { features: <%- JSON.stringify(stadiums) %>}
            </script>
            <script src="/javascripts/clusterMap.js"></script>