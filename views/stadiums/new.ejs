<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Stadium</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/stadiums" method='POST' novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="stadium[title]" required>
                    <div class="invalid-feedback">Please put a name</div>
                    <div class="valid-feedback">NICE</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="stadium[location]" required>
                    <div class="invalid-feedback">Location first!</div>
                    <div class="valid-feedback">NICE</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">League</label>
                    <input class="form-control" type="text" id="location" name="stadium[league]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Stadium Ticket Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">PLN</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="stadium[price]" required>
                        <div class="invalid-feedback">Please put a price</div>
                        <div class="valid-feedback">NICE</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="stadium[description]"
                        required></textarea>
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Upload Images</label>
                    <input type="file" class="form-control" id="formFileMultiple" name="image" multiple required>
                </div>
                <button class="btn btn-success mb-3">Add Stadium</button>
            </form>
            <a href="/stadiums" class="btn btn-warning">All Stadiums</a>
        </div>
    </div>